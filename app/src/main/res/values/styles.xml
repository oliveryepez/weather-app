<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="temperature_style" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#ABB7B7</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32pt</item>
    </style>

    <style name="city_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="time_text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ABB7B7</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="weather_icon" parent="TextAppearance.AppCompat.Large">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">65pt</item>
    </style>
    <style name="txt_max_temp" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ABB7B7</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">32pt</item>
    </style>

    <style name="txt_min_temp" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ABB7B7</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">28dp</item>
    </style>

    <style name="weather_desc" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#ABB7B7</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
